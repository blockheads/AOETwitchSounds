{
    "name": "AOE Twitch Sounds",
    "description": "Plays AOE sound effects for twitch chat",
    "version": "1.0",
    "manifest_version": 2,
    "web_accessible_resources": ["sounds/*.ogg"],
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": true
    },
    "content_scripts": [
      {
        "matches": ["https://*.twitch.tv/*","http://*.twitch.tv/*"],
        "js": ["content.js"]
      }
    ],
    "permissions": ["storage", "activeTab", "tabs", "webNavigation", "webRequest", "https://www.twitch.tv/"]
    
  }