{
    "name": "AOE Twitch Sounds",
    "description": "Plays AOE sound effects for twitch chat",
    "version": "1.0",
    "manifest_version": 2,
    "web_accessible_resources": ["sounds/*.ogg", "images/*.jpg","images/*.png"],
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": true
    },
    "content_scripts": [
      {
        "matches": ["https://*.twitch.tv/*","http://*.twitch.tv/*"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "icons": { "16": "icons/icon16.jpg",
      "48": "icons/icon48.jpg",
      "128": "icons/icon128.jpg" },
    "permissions": ["storage", "activeTab", "tabs", "webNavigation", "webRequest", "https://www.twitch.tv/"]
    
  }